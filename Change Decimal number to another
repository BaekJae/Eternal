#include <stdio.h>
#pragma warning(disable:4996)

int main() {
	int num, base, cnt=0;
	int arr[100];
	while (1) {
		cnt = 0;
		printf("Enter a number and a base>>");
		scanf("%d%d", &num, &base);
		if (num == 0 && base == 0) {
			break;
		}
		if (base < 16 && base != 8) {
			for (int i = 0; i < 50; i++) {
				if (num <= 0) {
					break;
				}
				arr[i] = num % base;
				num = num / base;
				cnt++;
			}
			for (int i = 0; i < cnt; i++) {
				printf("%d", arr[i]);
			}
			printf("\n\n");
		}
		else if (base == 16) {
			printf("%x", num);
			printf("\n\n");
		}
		else if (base == 8) {
			printf("%o", num);
			printf("\n\n");
		}
	}
}
